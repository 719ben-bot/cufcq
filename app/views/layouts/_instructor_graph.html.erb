<% @instructor.overall_query  %>
<script type="text/javascript">
  $(function () {
    var chart = new Highcharts.Chart({
      title: {text: null
          },
      chart: { renderTo: 'container' },
        legend: {
            enabled: true
        },
        xAxis: {
            tickPositions: [],
            type: 'category',
            categories: []
        },
        yAxis: {
          max: 6,
          min: 0,
          title: {
            text: null
            }
        },
      tooltip: {
        formatter: function () {
          var n = this.x%10
          var y = Math.floor(this.x/10);
          var s = n == 1 ? "Spring " : n==4 ? "Summer " : n==7 ? "Fall " : "Error "
          var parsed = s+y+" : "+this.y
          return (this.y >= 1.0) ? parsed : parsed+"<br/>NOTE: during this semester, this instructor <br/>did not return any FCQs. As a result, this <br/>value is marked as 0.0. Student's cannot <br/>actually mark scores lower than 1.0. This <br/>value is meant to serve as an indicator <br/>of an error."
          return s+y+" : "+this.y
      }
    },
    exporting: {
        buttons: {
            contextButtons: {
                enabled: false,
                menuItems: null
            }
        },
        enabled: true
    },    
    series: [
    {
        data: <%= @instructor.overall_data %>,
        name: "Overall"
    },
    {
        data: <%= @instructor.availability_data %>,
        name: "Availability"
    },
    {
        data: <%= @instructor.effectiveness_data %>,
        name: "Effectiveness"
    },
    {
        data: <%= @instructor.respect_data %>,
        name: "Respect"
    }
    ]
    });

 // the button action
    //var chart = $(container).highcharts(),
        $overall = $(overall);
    $overall.click(function() {
        var series = chart.series[0];
        if (series.visible) {
            series.hide();
            // $overall.html('Show series');
        } else {
            series.show();
            // $overall.html('Hide series');
        }
    });

    // the button action
    //var chart = $(container).highcharts(),
        $availability = $(availability);
    $availability.click(function() {
        var series = chart.series[1];
        if (series.visible) {
            series.hide();
            // $availability.html('Show series');
        } else {
            series.show();
            // $availability.html('Hide series');
        }
    });

        // the button action
    //var chart = $(container).highcharts(),
        $effectiveness = $(effectiveness);
    $effectiveness.click(function() {
        var series = chart.series[2];
        if (series.visible) {
            series.hide();
            // $effectiveness.html('Show series');
        } else {
            series.show();
            // $effectiveness.html('Hide series');
        }
    });


            // the button action
    //var chart = $(container).highcharts(),
        $respect = $(respect);
    $respect.click(function() {
        var series = chart.series[3];
        if (series.visible) {
            series.hide();
            // $respect.html('Show series');
        } else {
            series.show();
            // $respect.html('Hide series');
        }
    });





  });
</script>
<div id="container" style="height: 300px"></div>
